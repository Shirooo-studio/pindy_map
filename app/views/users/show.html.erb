<div id="map-container" class="relative w-full h-[calc(100dvh-0px)]" data-user-id="<%= @user.id %>">
  <div id="map" class="absolute inset-0"></div>

  <aside id="search-panel" class="search-panel show" aria-label="ユーザーページ">
    <div id="user-panel" class="p-3 space-y-3">
      <h1 class="text-lg font-semibold">ユーザー</h1>

      <section class="bg-white border rounded-lg p-3 space-y-3">
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 rounded-full bg-gray-200 border"></div>
          <div class="flex-1">
            <div class="font-medium" id="u-display-name">-</div>
            <div class="text-xs text-gray-500">@<span id="u-username">-</span></div>
          </div>
          <!-- 将来：フォローに差し替え。今はdisabledボタン -->
          <button class="px-3 py-1.5 rounded bg-gray-200 text-gray-500 text-sm cursor-not-allowed" disabled>
            フォロー（準備中）
          </button>
        </div>

        <div class="grid grid-cols-4 gap-2 text-center text-sm">
          <div><div class="font-semibold" id="u-count-posts">0</div><div class="text-gray-500">投稿</div></div>
          <div><div class="font-semibold" id="u-count-pins">0</div><div class="text-gray-500">ピン</div></div>
          <div><div class="font-semibold" id="u-count-followers">0</div><div class="text-gray-500">フォロワー</div></div>
          <div><div class="font-semibold" id="u-count-following">0</div><div class="text-gray-500">フォロー中</div></div>
        </div>

        <div class="text-sm text-gray-700 leading-relaxed" id="u-bio">-</div>
        <div class="text-xs text-gray-500">会社：<span id="u-company">-</span> ／ 部署：<span id="u-dept">-</span></div>
      </section>
    </div>
  </aside>

  <div id="detail-panel" class="detail-popup hidden">
    <div id="detail-body" class="p-0"></div>
  </div>
</div>
