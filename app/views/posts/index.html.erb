<% content_for :title, "Posts" %>

<div id="map-container" class="relative">
  <div id="map" class="h-screen w-full"></div>

  <!-- 右パネル（pins/me と同じ CSS を再利用）-->
  <aside id="search-panel" class="search-panel hidden" aria-label="ポスト検索">
    <div class="p-3 space-y-3">
      <h2 class="text-lg font-semibold">ポスト検索</h2>

      <div class="bg-white border rounded-lg p-2 flex gap-2">
        <input id="post-search-input"
              class="flex-1 outline-none"
              placeholder="本文・タイトルで検索（例：ランチ, おしゃれ）" />
        <button id="post-search-btn"
                class="px-3 py-1.5 rounded bg-blue-600 text-white text-sm">検索</button>
      </div>

      <ul id="posts-results" class="space-y-4"></ul>
    </div>
  </aside>

  <!-- ポップアップ型 詳細 -->
  <div id="detail-panel" class="detail-popup hidden">
    <div id="detail-body" class="p-0"></div>
  </div>
</div>

