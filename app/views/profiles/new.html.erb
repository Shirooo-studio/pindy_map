<!-- app/views/profiles/new.html.erb -->
<% content_for :title, "プロフィール入力" %>

<div class="w-full h-screen flex flex-col">
  <div>
    <%= image_tag "pindy/gradient-bar.png", alt: "Gradient",
      class: "w-full h-20 object-cover block shadow" %>
  </div>

  <div class="flex flex-1 bg-white">
    <!-- 左側：ロゴ -->
    <div class="basis-1/2 flex items-center justify-center bg-gray-50">
      <div class="text-center">
        <%= image_tag "pindy/mark-hero.png", alt: "Mark", class: "block w-72 h-auto mx-auto mb-6" %>
        <%= image_tag "pindy/logo.png", alt: "PINDY", class: "block w-48 h-auto mx-auto" %>
      </div>
    </div>

    <!-- 右側：フォーム -->
    <div class="basis-1/2 flex items-start justify-center p-12">
      <div class="w-full max-w-lg">
        <h1 class="text-5xl font-bold text-center mb-2">Account</h1>
        <p class="text-sm text-gray-600 text-center mb-8">あなたについて教えてください</p>

        <% if current_user.errors.any? %>
          <ul class="mb-4 text-sm text-red-600 list-disc list-inside">
            <% current_user.errors.full_messages.each do |m| %><li><%= m %></li><% end %>
          </ul>
        <% end %>

        <%= form_with model: current_user, url: profile_path, method: :post do |f| %>
          <div class="mb-5">
            <%= f.label :username, "ユーザー名", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :username,
              class: "block w-full rounded-md border border-gray-300 px-3 py-2",
              placeholder: "ユーザー名" %>
          </div>

          <div class="mb-5">
            <%= f.label :full_name, "名前・ニックネーム", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :full_name,
              class: "block w-full rounded-md border border-gray-300 px-3 py-2",
              placeholder: "名前・ニックネーム" %>
          </div>

          <div class="mb-5">
            <%= f.label :company, "会社名",class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :company,
              class: "block w-full rounded-md border border-gray-300 px-3 py-2",
              placeholder: "会社名" %>
          </div>

          <div class="mb-5">
            <%= f.label :work_location, "勤務地", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :work_location,
              class: "block w-full rounded-md border border-gray-300 px-3 py-2",
              placeholder: "勤務地" %>
          </div>

          <div class="mb-8">
            <%= f.label :department, "部署名", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :department,
              class: "block w-full rounded-md border border-gray-300 px-3 py-2",
              placeholder: "部署名" %>
          </div>

          <div class="text-center">
            <%= f.submit "アカウント登録",
              class: "rounded-md bg-blue-600 text-white py-2 px-8 font-medium hover:bg-blue-700" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
