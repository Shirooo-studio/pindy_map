<%= form_with(model: @pin) do |f| %>
  <%# Google Place から hidden に入れる %>
  <<%= f.hidden_field :latitude, id: "pin_latitude" %>
  <%= f.hidden_field :longitude, id: "pin_longitude" %>
  <%= f.hidden_field :place_id, id: "pin_place_id" %>

  <%= f.text_field :name, placeholder: "店名", class: "input" %>
  <%= f.text_field :address, placeholder: "住所", class: "input" %>

  <%= f.select :visibility,
    Pin.visibilities.keys.map { |k| [k.humanize] },
    {}, class: "select" %>

  <%= f.submit "ピンを保存", class: "btn" %>
<% end %>
