<% content_for :title, "Sign Up" %>

<!-- グラデーション帯 -->
<!-- <div class="h-16 w-full bg-gradient-to-r from-rose-400 via-fuchsia-500 to-cyan-500 rounded-xl shadow mb-6"></div> -->

<!-- 外枠：横も縦も画面いっぱい -->
<div class="w-full h-screen flex flex-col">

  <!-- 上の帯（画像で全幅・固定高さ） -->
  <div>
    <%= image_tag "pindy/gradient-bar.png",
        alt: "Gradient",
        class: "w-full h-20 object-cover shadow" %>
  </div>

  <!-- 本体の高さを決める -->
  <div class="flex flex-1 bg-white shadow">

    <!-- 左のロゴ（横50%・中央寄せ） -->
    <div class="basis-1/2 flex flex-col items-center justify-center bg-gray-50">
      <%= image_tag "pindy/mark-hero.png", alt: "Mark Hero", class: "w-80 h-auto" %>
      <%= image_tag "pindy/logo.png", alt: "Pindy Logo", class: "w-80 h-auto" %>
    </div>

    <!-- 右のログインフォーム（横50%・中央寄せ） -->
    <div class="basis-1/2 flex items-center justify-center p-12">
      <div class="w-full max-w-md">
        <h1 class="text-5xl font-bold text-center mb-12">Sign up</h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="mb-4">
            <%= f.label :email, "Eメール", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.email_field :email,
              class: "block w-full rounded-md border border-gray-300 px-3 py-2",
              placeholder: "Eメール", autocomplete: "email", required: true %>
          </div>

          <div class="mb-4">
            <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password,
              class: "block w-full rounded-md border border-gray-300 px-3 py-2",
              placeholder: "･･････････", autocomplete: "new-password", required: true %>
          </div>

          <div class="mb-4">
            <%= f.label :password_confirmation, "パスワード再入力", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password_confirmation,
              class: "block w-full rounded-md border border-gray-300 px-3 py-2",
              placeholder: "･･････････", autocomplete: "new-password", required: true %>
          </div>

          <%= f.submit "サインアップ",
            class: "w-full rounded-md bg-blue-600 text-white py-2 font-medium hover:bg-blue-700" %>
        <% end %>

        <% if notice %>
          <p class="text-green-600 text-sm mt-3"><%= notice %></p>
        <% elsif alert %>
          <p class="text-red-600 text-sm mt-3"><%= alert %></p>
        <% end %>

        <div class="text-center py-2 mt-3">
          <span class="text-sm">
            ログインは
            <%= link_to "こちら", new_user_session_path,
              class: "text-blue-600 hover:underline" %>
          </span>
        </div>
      </div>

    </div>
  </div>
</div>
